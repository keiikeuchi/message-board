<%= form_for(@message, html:{role: "form", class: "form-horizontal"}) do |f| %>
  
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
  <label for="massage_name" class="col-xs-2 control-label">名前:</label>
  <div class="col-xs-10">
    <%= f.text_field :name, class: "form-control" %>
  </div>
  </div>

  <div class="form-group">
  <label for="massage_body" class="col-xs-2 control-label">内容:</label>
  <div class="col-xs-10">
    <%= f.text_area :body, class: "form-control" %>
  </div>
  </div>
  
  <div class="form-group">
  <label for="massage_age" class="col-xs-2 control-label">年齡:</label>
  <div class="col-xs-10">
    <%= f.text_field :age, class: "form-control" %>
  </div>
  </div>
  
  <div class="form-group">
    <div class="col-xs-10 col-xs-offset-2">
      <%= f.submit class: "btn btn-sm btn-primary" %>
    </div>  
  </div>
  
<% end %>